# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('libctru')
pkgver=2.3.0
pkgrel=1
pkgdesc="Nintendo 3DS userland library."
arch=('any')
license=('custom')
url="http://github.com/devkitPro/${pkgname}"
options=(!strip libtool staticlibs)
source=(
  ${pkgname}-${pkgver}.tar.gz::${url}/archive/v${pkgver}.tar.gz
)
depends=('devkitARM')

groups=('3ds-dev')

build() {

  cd ${srcdir}/${pkgname}-${pkgver}/libctru
  make

}

package() {

  cd ${srcdir}/libctru-${pkgver}/libctru
  make -j DESTDIR=$pkgdir install

}

sha256sums=('2e6b501d9bf1a47ac97326bf3b964d0713d6cc91dfd42bc7c9619469ec8266df')
